<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if @user.new_record? %>
    <div class="field">
      <%= form.label :email %>
      <%= form.text_field :email, id: :user_email %>
    </div>
  <% else %>
    <div class="field">
      <p> Imagen actual: </p>
      <%= image_tag "data:image/png;base64,#{@user.image}", :class => "resize" %>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :image_file %>
    <%= form.file_field :image_file, id: :user_image_file, multiple: false,
     accept:'image/png', class: 'form-control' %>
     <%= form.hidden_field :image, :value => "place_holder" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
